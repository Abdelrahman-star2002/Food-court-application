<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_weight="1"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/azra2"
    app:cardElevation="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/mitemquan"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/mminus"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-319dp"
                android:layout_marginTop="-26dp"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="7dp"
                android:background="@color/bejjfateh"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/azra2"
                android:textSize="20sp"
                android:textStyle="bold"
                 />

            <Button
                android:id="@+id/mminus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/mplus"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="113dp"
                android:backgroundTint="@color/azra2"
                android:text="-"
                android:textSize="25sp"
                 />


            <Button
                android:id="@+id/mplus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="13dp"
                android:backgroundTint="@color/azra2"
                android:minHeight="48dp"
                android:text="+"
                android:textSize="25sp"
                 />
            <TextView
                android:id="@+id/mpricenumber"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/mpriceplus"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-319dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="10dp"
                android:background="@color/bejjfateh"
                android:text="price change"
                android:textAlignment="center"
                android:textColor="@color/azra2"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/mpriceminus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/mplus"
                android:layout_alignBottom="@+id/mitemquan"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="197dp"
                android:layout_marginBottom="-62dp"
                android:backgroundTint="@color/azra2"
                android:text="-"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/mpriceplus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mitemquan"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="-65dp"
                android:backgroundTint="@color/azra2"
                android:minHeight="48dp"
                android:text="+"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/mitemname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mpricenumber"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-319dp"
                android:layout_marginTop="-3dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="-36dp"
                android:text="item name"
                android:textColor="@color/azra2"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>