<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/oo"

    tools:context=".pass">

    <Button
        android:id="@+id/goback"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="35dp"
        android:backgroundTint="@color/azra2"
        android:text="â¬…"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="25dp">



            <TextView
                android:layout_width="293dp"
                android:id="@+id/test"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Enter your password chef!"
                android:textAlignment="center"
                android:textColor="@color/azra2"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/chefpassword"
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@color/bejjfateh"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />
            <Button
                android:id="@+id/enterr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/azra2"
                android:text="enter"
                android:textSize="18sp"
                tools:ignore="HardcodedText,VisualLintButtonSize,DuplicateSpeakableTextCheck" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>
